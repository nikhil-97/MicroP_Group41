<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE4E0"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.vyesh.bluetoothconn.ControllerActivity">

    <Button
        android:id="@+id/forward_btn"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/backward_btn"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="move"
        android:tag="f"
        android:text="FORWARD"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forward_btn"
        android:orientation="horizontal">

        <Button
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.33"
            android:clickable="true"
            android:onClick="move"
            android:tag="r"
            android:text="RIGHT"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.33"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:onClick="move"
            android:tag="s"
            android:text="STOP"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/left_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.33"
            android:clickable="true"
            android:onClick="move"
            android:tag="l"
            android:text="LEFT"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/backward_btn"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linear_3"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="move"
        android:tag="b"
        android:text="BACKWARD"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quit_btn"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vac_btn_on"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:clickable="true"
            android:onClick="move"
            android:tag="v"
            android:text="VACUUM ON"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/vac_btn_off"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.5"
            android:clickable="true"
            android:onClick="move"
            android:tag="o"
            android:text="VACUUM OFF"
            android:textColor="#000000"
            android:textSize="18sp" />


    </LinearLayout>

    <Button
        android:id="@+id/quit_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:onClick="move"
        android:tag="q"
        android:text="QUIT"
        android:textColor="#000000"
        android:textSize="18sp" />


</RelativeLayout>